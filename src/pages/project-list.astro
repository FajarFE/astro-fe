---
import Layout from '../layouts/Layout.astro';
import { Input } from '@/components/ui/input';
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from '@/components/ui/card';
import { AspectRatio } from '@/components/ui/aspect-ratio';
import { Progress } from '@/components/ui/progress';
import ProjectPagination from '@/components/ProjectPagination.astro';
import { SearchForm } from '@/components/ui/search-form';
---

<Layout title="Project List">
  <!-- Search box -->
  <div
    class="w-full max-w-sm flex pt-8 mx-auto md:container flex-col items-center"
  >
    <div class="w-full sm:w-full md:w-[50%]">
      <SearchForm />
    </div>
  </div>
  <!-- Search box -->
  <!-- Grid layout -->
  <div
    class="py-4 mx-auto max-w-sm md:container grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5"
  >
    <!-- Card 1 -->
    <div class="mb-2 md:p-6">
      <div class="flex flex-col space-y-1.5 mb-4">
        <AspectRatio ratio={16 / 9}>
          <img
            src="https://placehold.co/500x281"
            alt="Image"
            class="rounded-md object-cover hover:cursor-pointer"
          />
        </AspectRatio>
        <div class="text-sm text-muted-foreground">Nama Business Creator</div>
        <p
          class="font-semibold leading-none tracking-tight hover:underline hover:underline-offset-2 hover:cursor-pointer"
        >
          Judul Project
        </p>
      </div>
      <div class="space-y-1.5">
        <Progress value={33} />
        <div class="flex justify-between">
          <p>Terkumpul 33%</p>
          <p>Rp157.058.000</p>
